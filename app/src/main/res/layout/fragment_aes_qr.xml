<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/aes_qr_fragment_root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CCBCBCBC"
        android:clickable="true"
        android:elevation="9dp"
        android:focusable="true">

        <ImageButton
            android:id="@+id/close_qr_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_above="@id/aes_qr_relative_layout"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ripple_white"
            android:padding="5dp"
            android:src="@drawable/ic_close" />
        <ImageButton
            android:id="@+id/go_back_to_role"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_above="@id/aes_qr_relative_layout"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:background="@drawable/ripple_white"
            android:padding="5dp"
            android:src="@drawable/ic_back" />
        <RelativeLayout
            android:id="@+id/aes_qr_relative_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/round_corners"
            android:elevation="16dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageView
                android:id="@+id/qr_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <ImageButton
            android:id="@+id/scan_friend_id"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/aes_qr_relative_layout"
            android:background="@drawable/ripple_white"
            android:padding="5dp"
            android:rotation="180"
            android:src="@drawable/ic_back"
            tools:ignore="ContentDescription" />
    </RelativeLayout>
</layout>